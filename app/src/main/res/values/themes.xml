<resources>
    <!--    Background Theme -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="dividerColor">@color/black</item>
        <item name="android:textColorHint">@color/highlight</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="buttonTint">@color/white_bkgrnd</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:colorBackground">@color/blue</item>
    </style>

    <!--    Widget Theme -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="dividerColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/highlight</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonTint">@color/white_bkgrnd</item>
        <item name="cardBackgroundColor">@color/light_blue</item>
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>

    </style>

    <style name="colorDialog" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="numberPicker">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/blue</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/Grayed_Out</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/black</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/light_blue</item>
        <item name="android:buttonBarButtonStyle">@style/MyButtonBarButtonStyle</item>
    </style>

    <style name="MyButtonBarButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

</resources>