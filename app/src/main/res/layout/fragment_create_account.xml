<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flCreateAccountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignItems="center"
    app:flexDirection="column"
    app:flexWrap="wrap"
    android:background="@drawable/login_background"
    app:justifyContent="space_evenly"
    android:theme="@style/Theme.Login">

    <TextView
        android:id="@+id/tvCreateAccountTitle"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/etFirstNameField"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/etLastNameField"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/etEmailAddressField"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/etPasswordEntryField"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:hint="Password"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/etPasswordReentryField"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:hint="Re-Enter Password"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:backgroundTint="@color/black"
        android:textSize="14sp"
        app:cornerRadius="15dp" />

    <TextView
        android:id="@+id/tvHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="Already Have an Account?"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Log In"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold" />

</com.google.android.flexbox.FlexboxLayout>