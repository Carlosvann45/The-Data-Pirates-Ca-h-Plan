<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCashFlowItemFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/light_blue"
    tools:context=".domains.cashflow.CashFlowItemFragment">

    <TextView
        android:textAlignment="center"
        android:id="@+id/tvExpensesListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vHLI"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesListTitle"
        />

    <TextView
        android:id="@+id/tvDepositAmount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:paddingStart="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesListTitle"
        />

    <TextView
        android:id="@+id/tvDepositsTotalAmount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="Date:"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDepositAmount"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesListTitle" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDepositsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDepositAmount"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvDepositTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance: 0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />








</androidx.constraintlayout.widget.ConstraintLayout>