<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvExpenseValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Value"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvItemTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/green"/>

    <TextView
        android:id="@+id/tvCashFlowFrequencyValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvExpenseValue"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvCashFlowDepositsAmount"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCashFlowFrequencyValue"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>