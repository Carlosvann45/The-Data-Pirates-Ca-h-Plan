<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCashFlowFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/light_blue"
    tools:context=".domains.cashflow.CashFlowFragment">

    <TextView
        android:textAlignment="center"
        android:id="@+id/tvExpensesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash Flow"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vHL"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesTitle"
        />

    <TextView
        android:id="@+id/tvExpensesName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:paddingStart="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesTitle"
        />

    <TextView
        android:id="@+id/tvExpensesAmount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="Amount:"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@id/tvFrequencyName"
        app:layout_constraintStart_toEndOf="@+id/tvExpensesName"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesTitle" />

    <TextView
        android:id="@+id/tvFrequencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="Frequency:"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@id/tvDepositsSize"
        app:layout_constraintStart_toEndOf="@+id/tvExpensesAmount"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesTitle" />

    <TextView
        android:id="@+id/tvDepositsSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="Deposits:"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvFrequencyName"
        app:layout_constraintTop_toBottomOf="@+id/tvExpensesTitle" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvExpensesName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvExpensesTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Balance: 0"
        android:layout_marginBottom="50dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddExpense"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
/>



</androidx.constraintlayout.widget.ConstraintLayout>