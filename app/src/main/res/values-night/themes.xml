<resources>
    <!-- Base application theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/abs_black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white_bkgrnd</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/abs_black</item>
    </style>

    <!-- Secondary application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white_bkgrnd</item>
        <item name="android:colorBackground">@color/abs_black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/abs_black</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>